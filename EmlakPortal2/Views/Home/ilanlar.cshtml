
@model IEnumerable<EmlakPortal2.Models.ilanlar>
<div class="row">
    <div class="col-md-12">
        <br />
        <h2>Güncel İlanlar</h2>
        <br />
        <div class="row mb-2">
            @foreach (var ilan in Model)
            {
                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2 text-primary">@ilan.ilanAdi</strong>
                            <h3 class="mb-0">
                                <a class="text-dark" href="#">@ilan.ilanYer</a>
                            </h3>
                            <div class="mb-1 text">M2: @ilan.m2</div>
                            <div class="mb-1 text">Fiyat: @ilan.fiyat TL</div>
                            <a href="#">Detaylı Görüntüle...</a>
                        </div>
                        <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="@ilan.ilanAdi" style="width: 200px; height: 250px;" src="~/Content/ilanResim/@ilan.ilanResim" data-holder-rendered="true">
                    </div>
                </div>
            }
        </div>
    </div>
</div>

